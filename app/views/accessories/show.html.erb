<h1><%= @accessory.name %></h1>

<section class='show-main'>
  <div class="card">
    <img class="card-img-top" src='<%= @accessory.image %>' alt="Card image cap" style="width:400px;height:400px;">
    <div class="card-body">
      <h3 class="card-title"><%= @accessory.name %></h3>
      <p class="card-text"><%= @accessory.description %></p>
      <p class='card-text'><%= number_to_currency(@accessory.price) %></p>
      <% if current_admin? %>
        <% if @accessory.retired?%>
          <td><%= button_to 'Reactivate', admin_accessory_path(@accessory, show_retired?: false), method: :put, class:'btn btn-primary accessory-show-button-activate' %></td>
        <% else %>
          <td><%= button_to 'Retire', admin_accessory_path(@accessory, show_retired?: true), method: :put, class:'btn btn-danger retire-button accessory-show-button-retire' %></td>
        <% end %>
      <% end %>
      <% if @accessory.retired? %>
          <p>Accessory Not Available</p>
          <p><%= button_to 'Retired', carts_path(accessory_id: @accessory.id, on_show: true), disabled: true, class:'btn btn-primary' %></p>
      <% else %>
        <p><%= button_to 'Add to Cart', carts_path(accessory_id: @accessory.id, on_show: true), class:'btn btn-primary' %></p>
      <% end %>
      <%= link_to '<< Back to Bike Shop', bike_shop_path %>
    </div>
  </div>
</section>




