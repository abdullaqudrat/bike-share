<h1><%= @accessory.name %></h1>
<img src='<%= @accessory.image %>' alt="accessory image" style="width:400px;height:400px;">
      <div>
        <h3><%= @accessory.name %></h3>
        <p><%= @accessory.description %></p>
        <p>Price: <%= number_to_currency(@accessory.price) %></p>
        <% if @accessory.retired? %>
          <p><%= button_to 'Retired', disabled: true%></p>
        <% else %>
          <p><%= button_to 'Add to Cart', carts_path(accessory_id: @accessory.id, on_show: true)%></p>
        <% end %>
      </div>
