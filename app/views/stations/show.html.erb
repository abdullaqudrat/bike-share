<h1><%= @station.name %></h1>

<% if current_admin? %>
  <%= link_to 'Create New Station', new_admin_station_path, class:'btn btn-secondary' %>
<% end %>

<section class='show-main'>
  <div>Dock Count: <%= @station.dock_count %></div>
  <div>City: <%= @station.city %></div>
  <div>Installation Date: <%= @station.installation_date.strftime("%m/%d/%Y") %></div>

  <% if current_user %>
    <div>Number of Rides Started Here: <%= @station.number_rides_started %></div>
    <div>Number of Rides Ended Here: <%= @station.number_rides_ended %></div>

    <div>Most Frequent Destination Station: <%= @station.most_frequent_destination %></div>
    <div>Most Frequent Origination Station: <%= @station.most_frequent_origination %></div>
    <div>Date With Most Trips Started Here: <%= @station.date_for_most_trips_started %></div>
    <div>Most Frequent Zipcode For Users Starting Here: <%= @station.top_starting_user_zipcode %></div>
    <div>Bike ID Most Frequently Starting Here: <%= @station.top_starting_bike_id %></div>
  <% end %>
  <p><%= link_to '<< Back to Stations Index', stations_path %></p>
</section>

