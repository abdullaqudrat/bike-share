<h1>Registered Users</h1>

<section class='index-main'>
  <table class="table table-striped table-light" id='station-index-table'>
    <thead class='table-light table-header'>
      <tr>
        <th scope="col" id='table-entry'>Full Name</th>
        <th scope="col" id='table-entry'>Username</th>
        <th scope="col" id='table-entry'>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <section id="user-<%= user.id %>">
        <tr>
          <th id='table-entry'><%= link_to user.full_name, user_path(user) %></th>
          <td id='table-entry'><%= user.username %></td>
          <td id='table-entry'><%= user.email %></td>
          <td><%= button_to 'Edit', edit_admin_user_path(user), method: :get, class:'btn btn-success edit-button' %></td>
          <td><%= button_to 'Delete', admin_user_path(user), method: :delete, data: {confirm: "Really want to delete this user?"}, class:'btn btn-danger delete-button' %></td>
          <% end %>
        </tr>
      </section>
    </tbody>
  </table>
</section>

<%= will_paginate @users %>