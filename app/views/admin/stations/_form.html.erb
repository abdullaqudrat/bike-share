<div class="container-fluid form-container card">
  <%= form_for [:admin, @station] do |form| %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :dock_count %>
      <%= form.number_field :dock_count, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :city %>
      <%= form.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :installation_date %>
      <%= form.date_field :installation_date, class: "form-control" %>
    </div>

    <%= form.submit class: 'btn btn-primary' %>
  <% end %>
</div>
