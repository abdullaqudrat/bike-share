<h1>All Trips</h1>
<%= link_to 'Add New Trip', new_admin_trip_path, class: 'text-center' %>

<section class='index-main'>
  <table class='table table-striped table-light' id='trip-index-table'>
    <thead class='table-light table-header'>
      <tr>
        <th scope="col" class='table-entry'>Trip #</th>
        <th scope="col" class='table-entry'>Duration (sec)</th>
        <th scope="col" class='table-entry'>Start Date</th>
        <th scope="col" class='table-entry'>End Date</th>
        <th scope="col" class='table-entry'>Start Station</th>
        <th scope="col" class='table-entry'>End Station</th>
        <th scope="col" class='table-entry'>Bike #</th>
        <th scope="col" class='table-entry'>Subscription Type</th>
        <th scope="col" class='table-entry'>Zip Code</th>
        <th scope="col" class="table-entry" colspan="2">Admin</th>
      </tr>
    </thead>
    <tbody>
      <% @trips.each do |trip| %>
        <tr id="trip-<%= trip.id %>">
          <td class='table-entry'><%= link_to "##{trip.id}", admin_trip_path(trip) %></td>
          <td class='table-entry'><%= trip.duration %></td>
          <td class='table-entry'><%= trip.start_date.strftime('%m/%d/%Y') %></td>
          <td class='table-entry'><%= trip.end_date.strftime('%m/%d/%Y') %></td>
          <td class='table-entry'><%= trip.start_station.name %></td>
          <td class='table-entry'><%= trip.end_station.name %></td>
          <td class='table-entry'><%= trip.bike_id %></td>
          <td class='table-entry'><%= trip.subscription_type %></td>
          <td class='table-entry'><%= trip.zip_code %></td>
          <td class="table-entry"><%= link_to 'Edit', edit_admin_trip_path(trip) %></td>
          <td class="table-entry"><%= link_to 'Delete', admin_trip_path(trip), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%= will_paginate @trips %>
