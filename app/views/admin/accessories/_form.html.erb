<%= form_for [:admin, @accessory] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :image, 'Image (optional)' %>
	<%= f.file_field :image %>

	<%= f.submit %>
<% end %>