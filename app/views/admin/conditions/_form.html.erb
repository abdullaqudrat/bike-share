<div class="container-fluid form-container card">
  <%= form_for [:admin, @condition] do |form| %>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :max_temperature %>
      <%= form.number_field :max_temperature, :step => 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :mean_temperature %>
      <%= form.number_field :mean_temperature, :step => 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :min_temperature %>
      <%= form.number_field :min_temperature, :step => 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :mean_humidity %>
      <%= form.number_field :mean_humidity, :step => 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :mean_visibility %>
      <%= form.number_field :mean_visibility, :step => 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :mean_wind_speed %>
      <%= form.number_field :mean_wind_speed, :step => 0.01, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :precipitation %>
      <%= form.number_field :precipitation, :step => 0.01, class: 'form-control' %>
    </div>

    <%= form.submit class: "btn btn-primary" %>
  <% end %>
</div>
