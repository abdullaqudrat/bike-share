<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% unless current_user %>
      <p><%= link_to 'Login', login_path%></p>
    <% else %>
      <p>Logged in as <%= link_to current_user.username, user_path(current_user) %>!</p>
      <p><%= link_to 'Logout', logout_path %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
