<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p><%= link_to "Cart: #{@cart.total_count}", '/cart' %></p>
    <% unless current_user %>
      <p><%= link_to 'Login', login_path%></p>
    <% else %>
      <p>Logged in as <%= link_to current_user.username, dashboard_path %>!</p>
      <p><%= link_to 'Logout', logout_path %></p>
    <% end %>
    <% flash.each do |type, message| %>
      <%= content_tag :div, sanitize(message), class: type %>
    <% end %>
    <%= yield %>
  </body>
</html>
